client.focused          #664477 #664477 #cccccc #e7d8b1
client.focused_inactive #e7d8b1 #e7d8b1 #181715 #A074C4
client.unfocused        #222133 #222133 #AAAAAA #A074C4
client.urgent           #CE4045 #CE4045 #e7d8b1 #DCCD69
## Bar
bar {
    status_command i3status
    position top
    tray_output $main_monitor

# Purple theme
    colors {
        separator           #AAAAAA
        background          #222133
        statusline          #FFFFFF
        focused_workspace   #664477 #664477 #cccccc
        active_workspace    #DCCD69 #DCCD69 #181715
        inactive_workspace  #222133 #222133 #AAAAAA
        urgent_workspace    #CE4045 #CE4045 #FFFFFF
    }
}

## Speicific app appearance
for_window [class="^st"] border none
for_window [class="terminal"] border none

for_window [class="[Zz]athura"] border none

bindsym $mod+minus scratchpad show
bindsym $mod+Shift+minus move scratchpad


## File browser
bindsym $mod+Shift+f exec which ranger &>/dev/null && st -e tmux new-session -A -s ranger ranger || i3-nagbar -f $main_font -m 'Missing ranger'

## Audio
bindsym XF86AudioRaiseVolume exec amixer -q set Master 2dB+ unmute
bindsym XF86AudioLowerVolume exec amixer -q set Master 2dB- unmute
bindsym XF86AudioMute exec amixer -q set Master toggle

