general {
	colors = true
	interval = 5
	output_format = i3bar
	markup = "pango"
	separator = "|"
}

#order += "ipv6"
order += "disk /"
order += "run_watch DHCP"
#order += "run_watch openvpn"
order += "wireless wlp13s0"
order += "ethernet enp14s0"
order += "volume master"
order += "battery 0"
order += "cpu_temperature 0"
order += "cpu_usage"
order += "memory"
order += "tztime berlin"


tztime berlin {
	format = "%Y-%m-%d %H:%M:%S %Z"
	timezone = "Europe/Berlin"
}

wireless wlp13s0 {
	format_up = "W: (%quality [%essid], %bitrate) %ip"
	format_down = "W: down"
}

ethernet enp14s0 {
	# if you use %speed, i3status requires the cap_net_admin capability
	format_up = "E: %ip (%speed)"
	format_down = ""
}

battery 0 {
	# true - –ø–æ–∫–∞–∑ –ø—Ä–æ—Ü–µ–Ω—Ç–∞ –∑–∞—Ä—è–¥–∞ –æ—Ç 0 –¥–æ 100
	# false - –ø–æ–∫–∞–∑ –ø—Ä–æ—Ü–µ–Ω—Ç–∞ –∑–∞—Ä—è–¥–∞ –æ—Ç 0 –¥–æ n, —Å —É—á–µ—Ç–æ–º
	# –∏–∑–Ω–æ—à–µ–Ω–Ω–æ—Å—Ç–∏ –∞–∫–∫—É–º—É–ª—è—Ç–æ—Ä–∞
	# last_full_capacity = true
	format = "Akku %status %percentage %remaining %emptytime %consumption"
	format_down = "No battery"
	status_chr = "‚ö°"
	status_bat = "üîã"
	status_unk = "?"
	status_full = ":)"
	path = "/sys/class/power_supply/BAT%d/uevent"
	low_threshold = 10
	hide_seconds = true
}

cpu_usage {
	format = "CPU: %usage"
}

cpu_temperature 0 {
	format = "T: %degrees ¬∞C"
	path = "/sys/devices/platform/coretemp.0/hwmon/hwmon3/temp1_input"
}

disk "/" {
	format = "/: %percentage_used"
	threshold_type = percentage_free
	low_threshold = 10
	threshold_type = "gbytes_avail"
	format_below_threshold = "Warning: %avail"
}

memory {
	memory_used_method = classical
	format = "%used (%percentage_used)"
	unit = Gi
	# percentage values indicate free space left
	threshold_degraded = "25%"
	threshold_critical = "15%"
}

volume master {
	format = "‚ô™: <span color='#BBBB44'>%volume</span>"
	format_muted = "‚ô™: muted (%volume)"
	device = "default"
	mixer = "Master"
	mixer_idx = 0
}

# –æ—Ç—Å–ª–µ–∂–∏–≤–∞–Ω–∏–µ –ø—Ä–æ—Ü–µ—Å—Å–∞ openvpn
# —Å–ª—É–∂–∏—Ç –∫–∞–∫ –∏–Ω–¥–∏–∫–∞—Ç–æ—Ä —Ä–∞–±–æ—Ç—ã openvpn –∫–ª–∏–µ–Ω—Ç–∞
# –ø—Ä–∏ –∑–∞–ø—É—Å–∫–µ openvpn –Ω–µ–æ–±—Ö–æ–¥–∏–º–æ
# —É–∫–∞–∑—ã–≤–∞—Ç—å –ø–∞—Ä–∞–º–µ—Ç—Ä --writepid /var/run/openvpn.pid
run_watch openvpn {
    pidfile = "/var/run/openvpn.pid"
    format = "ÔïÇ openvpn"
    # –µ—Å–ª–∏ –ø–∞—Ä–µ–º–µ—Ç—Ä format_down –æ—Å—Ç–∞–≤–∏—Ç—å –ø—É—Å—Ç—ã–º,
    # —Ç–æ –ø—Ä–∏ –Ω–µ–∞–∫—Ç–∏–≤–Ω–æ–º –ø—Ä–æ—Ü–µ—Å—Å–µ –±–ª–æ–∫ –±—É–¥–µ—Ç –æ—Ç—Å—É—Ç—Å—Ç–≤–æ–≤–∞—Ç—å
    format_down=""
}

run_watch VPN_tap {
	# path exists when a VPN tunnel launched by nmcli/nm-applet is active
	pidfile = "/sys/class/net/tap0/dev_id"
}


run_watch DHCP {
	pidfile = "/var/run/dhclient*.pid"
}
