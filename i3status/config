general {
        colors = true
        interval = 5
	output_format = i3bar
        markup = "pango"
}

#order += "ipv6"
#order += "disk /"
order += "run_watch DHCP"
#order += "run_watch VPN_tap"
order += "wireless wlp13s0"
order += "ethernet enp14s0"
order += "volume master"
order += "battery 0"
order += "cpu_temperature 0"
order += "cpu_usage"
order += "tztime berlin"


tztime berlin {
        format = "%Y-%m-%d %H:%M:%S %Z"
        timezone = "Europe/Berlin"
}

wireless wlp13s0 {
        format_up = "W: (%quality [%essid], %bitrate) %ip"
        format_down = "W: down"
}

ethernet enp14s0 {
        # if you use %speed, i3status requires the cap_net_admin capability
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery 0 {
        format = "Akku %status %percentage %remaining %emptytime %consumption"
        format_down = "No battery"
        status_chr = "âš¡"
        status_bat = "ðŸ”‹"
        status_unk = "?"
        status_full = ":)"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
	hide_seconds = true
}

run_watch DHCP {
        pidfile = "/var/run/dhclient*.pid"
}

run_watch VPN_tap {
        # path exists when a VPN tunnel launched by nmcli/nm-applet is active
        pidfile = "/sys/class/net/tap0/dev_id"
}

cpu_usage {
	format = "CPU: %usage"
}

cpu_temperature 0 {
        format = "T: %degrees Â°C"
        path = "/sys/devices/platform/coretemp.0/hwmon/hwmon4/temp1_input"
}

disk "/" {
        format = "%free"
}

volume master {
        format = "â™ª: <span color='#BBBB44'>%volume</span>"
        format_muted = "â™ª: muted (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

